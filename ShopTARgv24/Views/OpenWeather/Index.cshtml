@model ShopTARgv24.Models.WeatherModel

<div class="container mt-5">

    <h1 class="text-center mb-4">Check the Weather</h1>

    @if (Model != null)
    {
        <div class="card shadow-sm border-0 mx-auto mb-4" style="max-width: 50%;">
            <div class="card-body text-center">
                <h3 class="card-title mb-2 fw-semibold">@Model.Name</h3>
                <h4 class="display-6 mb-1">@Model.Main.Temp &deg;C</h4>
                <p class="text-muted text-capitalize mb-2">@Model.Weather[0].Description</p>
                <img src="@($"https://openweathermap.org/img/wn/{Model.Weather[0].Icon}@2x.png")"
                     alt="Weather icon" class="img-fluid mt-2" style="width: 90px;" />
            </div>
        </div>
    }

    <div class="d-flex justify-content-center">
        <form asp-action="Index" method="get" class="d-flex w-50">
            <input type="text" name="city" value="@ViewBag.City" class="form-control me-2" placeholder="Enter city name...">
            <button type="submit" class="btn btn-success">Go</button>
        </form>
    </div>

    @if (Model == null)
    {
        <p class="text-center text-secondary mt-4">Enter a city above to see the current weather.</p>
    }

</div>

