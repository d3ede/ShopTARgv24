@model ShopTARgv24.Models.WeatherModel

<div class="container mt-5">

    <h1 class="input-group w-50 mx-auto">Weather</h1>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="container text-center mt-4">
            <form asp-action="Index" method="get" class="mb-4">
                <div class="input-group w-50 mx-auto">
                    <input type="text" name="city" value="@ViewBag.City" class="form-control" placeholder="Sisesta linn">
                    <button type="submit" class="btn btn-primary">Otsi</button>
                </div>
            </form>
        </div>
    </form>
    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-body text-center">
            <h2 class="card-title">@Model.Name</h2>
            <p class="card-text display-6">@Model.Main.Temp &deg;C</p>
            <p class="card-text text-capitalize">@Model.Weather[0].Description</p>
            <img src="@($"https://openweathermap.org/img/wn/{Model.Weather[0].Icon}@2x.png")"
             class="mt-3" alt="Weather icon" />
        </div>
    </div>
</div>